<section class="container mt-4 mb-4 p-4">
  <h2>
    Listado de Comercios Adheridos
  </h2>
  <p>
    Podes filtrar el comercio que buscas solo escibiendo las primeras letras
  </p>
  <input class="form-control" id="myInput" type="text" placeholder="Buscar.." />
  <br />
  <table class="table table-bordered table-responsive table-striped">
    <thead>
      <tr>
        <th scope="col">
          #
        </th>
        <th scope="col">
          COMERCIO
        </th>
        <th scope="col">
          RUBRO
        </th>
        <th scope="col">
          DIRECCION
        </th>
        <th scope="col">
          BENEFICIO
        </th>
      </tr>
    </thead>
    <tbody id="myTable">
      {{#each comlist}}
        <tr>
          <th scope="row">
            {{this.idcomercio}}
          </th>
          <td>
            {{this.comercio}}
          </td>
          <td>
            {{this.rubro}}
          </td>
          <td>
            {{this.direccion}}
          </td>
          <td>
            {{this.beneficio}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <script>
    $(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
  </script>
</section>